{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2017",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "dist/dts",
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "../../",
        "types": ["types-base", "@gdi/types", "@types/jest"],
        "paths": {
            "@gdi/template-gdi": ["packages/gdi-template-gdi"],
            "@gdi/template-blog": ["packages/gdi-template-blog"],
            "@gdi/galleries": ["packages/gdi-galleries"],
            "@gdi/store-mixer": ["packages/gdi-store-mixer"]
        }
    },
    "include": ["src/*.ts", "test/*.ts"]
}
