{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2020",
        "module": "ES2022",
        "lib": ["ES2020", "dom"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "dist/dts",
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "../../",
        "types": ["types-base", "@gdi/types", "@types/jest"],
        "paths": {
            "@gdi/store-mixer": ["packages/gdi-store-mixer"]
        }
    },
    "include": ["src/*.ts", "test/*.ts"]
}
